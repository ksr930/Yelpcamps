<% include ../partials/header %>
<div class="container">


    <h1 style="text-align:center">Add new comment to <%= campground.name %></h1>

    <div style="width:30%; margin:25px auto;">
        <form method="post" action="/campground/<%= campground._id %>/comments">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[comment]" placeholder="text">
            </div>
            
            <button class=" btn btn-lg btn-primary btn-block" type="submit">submit</button>

        </form>
    </div>
    <a href="/campground">go back</a>





</div>


