

<% include ../partials/header %>

<h1>edit form</h1>
<div class="container">


    <h1 style="text-align:center">Edit a <%= campground.name %></h1>

    <div style="width:30%; margin:25px auto;">
        
            <form class="ui form" method="POST" action="/campground/<%= campground._id %>?_method=PUT">
            <div class="form-group">
                <input class="form-control" type="text" name="camp[name]" placeholder="name" value=<%= campground.name %>>
            </div>
            <div class="form-group">

                <input class="form-control" type="text" name="camp[image]" placeholder="image url" value=<%= campground.image %>>
            </div>
<div class="form-group">

    <input class="form-control" type="number" name="camp[price]" value=<%= campground.price %> min="0.01" step="0.01">
</div>
            <div class="form-group">

                <input class="form-control" type="text" name="camp[description]" placeholder="description" value=<%=campground.description %>>
            </div>
            <button class=" btn btn-lg btn-primary btn-block" type="submit">submit</button>

        </form>
    </div>
    <a href="/campground">go back</a>


        
    </div>



</div>


<% include ../partials/footer %>